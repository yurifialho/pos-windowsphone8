  <Identity Name="5211fa43-8f4d-4f57-b79d-2712bb877178"
            Publisher="CN=posgrad"
            Version="1.0.0.0" />

  <mp:PhoneIdentity PhoneProductId="055f7c22-c851-4509-815f-642b5a436878"
